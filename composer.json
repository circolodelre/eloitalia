{
  "scripts": {
    "test": ["phpcs"]
  },
  "repositories":[
    {
      "type":"composer",
      "url":"https://wpackagist.org"
    }
  ],
  "autoload": {
    "psr-4": {
      "App\\": "app/"
    }
  },
  "require": {
    "php": ">=7",
    "johnpbloch/wordpress": "5.0.3",
    "wpackagist-plugin/ultimate-member":"2.0.39",
    "wpackagist-theme/iconic-one":"1.9.8"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^2.8.0"
  },
  "extra": {
    "installer-paths": {
      "volumes/wp-content/plugins/{$name}/": ["type:wordpress-plugin"],
      "volumes/wp-content/themes/{$name}/": ["type:wordpress-theme"]
    }
  }
}
